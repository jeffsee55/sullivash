.sidebar
  %span.toggle_menu
    %span.toggle_menu_inner +
  =link_to admin_user_path(@user), class: "item sidebar-welcome" do
    =image_tag attachment_url(@user, :image, :fill, 50, 50), class: "avatar circle", style: "width:50px; height: 50px"
    .user= @user.first_name.upcase
  %hr{style: "border-color: #dddddd; border: 2px solid"}
  %ul.accordion
    %li
      =link_to "VIEW SITE", "", class: "js-accordion-trigger"
      .fa.fa-angle-down
      %ul.submenu
        %li
          =link_to "Home", root_path
        %li
          =link_to "About", about_path
        %li
          =link_to "Contact", contact_path
    %li
      =link_to "DASHBOARD", admin_path
    %li
      =link_to "SETTINGS", "", class: "js-accordion-trigger"
      .fa.fa-angle-down
      %ul.submenu
        %li
          =link_to "Profile", edit_admin_user_path(@user)
    %li
      =link_to "POSTS", "", class: "js-accordion-trigger"
      .fa.fa-angle-down
      %ul.submenu
        %li
          =link_to "New", new_admin_post_path
        %li
          =link_to "All", admin_posts_path
    %li
      =link_to "MINI POSTS", admin_mini_posts_path
    %li
      =link_to "CATEGORIES", "", class: "js-accordion-trigger"
      .fa.fa-angle-down
      %ul.submenu
        %li
          =link_to "New", new_admin_category_path
        %li
          =link_to "All", admin_categories_path
    %li
      =link_to "MESSAGES", admin_messages_path
