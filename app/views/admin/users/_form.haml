= simple_form_for [:admin, @user] do |f|
  .clearfix
    .card
      #image.card_image{style: "background: url(#{attachment_url(@user, :image, :fit, 300, 300) if @user.image_id?}) no-repeat center; background-size: cover"}
      = f.input :remove_image, as: :boolean, label: "Remove Image"
      = f.attachment_field :image, direct: true, class: "image_upload"
    .post_info
      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = link_to "New Password", new_password_path
      = f.input :bio
      = f.submit "Save", class: "button", data: { disable_with: "Saving..."}
